pipeline {
  
  agent any 
  
  stages{
     
    stage("level-1"){
      steps{
        echo  'level -1 check'
      }
      
    }
    
    
    
    
  }
  
  
  
}

post {
  always{
    
    echo 'whatever...' }
  
  success {
    
    echo 'done...' 
  }
  
  
  failure{
    
    echo 'not-conect'
  }
  
  
  
}
